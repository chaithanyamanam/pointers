#include<stdio.h>
#include<conio.h>
int main()
{  
int n;
int *p;
printf("enter variable");
scanf("%d",&n);
p=&n;
printf("Address of p variable is %u \n",p); 
printf("After increment: Address of p variable is %u \n",p+1);
printf("After decrement: Address of p variable is %u \n",p-1);
printf("After addition: Address of p variable is %u \n",p+2);
printf("After subraction: Address of p variable is %u \n",p-2);
return 0;  
}    
